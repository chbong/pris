@{
    ViewBag.Title = "Qualification";
}

@Html.ValidationSummary(true)
@model PRIS.Models.Qualification
@using PRIS.Models

<div class="phoneNumber1">
    <p>
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.JobseekerId)
        <label>Qualification</label>
        @Html.EditorFor(x => x.Level, new { htmlAttributes = new { @class = "form-control" } })
        <label>Field of Study</label>
        @Html.EditorFor(x => x.FieldOfStudy, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(x => x.DeleteQualification, new { @class = "mark-for-delete" })
        @Html.RemoveLink("Remove", "div.phoneNumber1", "input.mark-for-delete")
    </p>
</div>