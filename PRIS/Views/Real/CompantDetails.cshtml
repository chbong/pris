                <!--Qualification starts-->
                <div class="col-md-9 order-content" id="qualificationDiv" style="display:none">
                    <div class="form_main col-md-4 col-sm-5 col-xs-7">
                        <h4 class="heading" style="font-size:30px"><strong>Company Contact </strong><span></span></h4>
                        <div class="form">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Email Address</th>
                                        <td>@Model.CompanyEmail</td>
                                    </tr>
                                </thead>
                                <tr>
                                    <th>Phone Number</th>
                                    <td>@Model.CompanyPhoneNo</td>
                                </tr>
                                <tr>
                                    <th>Website</th>
                                    <td>@Model.CompanyWebsite</td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td>@Model.CompanyAddress</td>
                                </tr>

                                <tr>
                                    <th></th>
                                    <td style="padding-top:6%"><input type="button" class="btn btn-primary" style="font-size:18px"  value="Edit" onclick="window.location.href='@Url.Action("EditCompanyDetails", "Real", new { @class = "btn btn-primary", id = Model.CompanyId })';" /></td>
