            </div>
                
        </div>
            </div>

    <script>
        $(document).ready(function(){
            $("#personal").click(function(){
                $("#qualificationDiv").hide();
                $("#attachmentDiv").hide();
                $("#personalDiv").show();
                return false;
            });

            $("#editPersonal").click(function(){                
                $("#personalDiv").hide();
                $("#personalEditDiv").show();                
                return false;
            });

            $("#qualification").click(function(){
                $("#personalDiv").hide();
                $("#attachmentDiv").hide();
                $("#qualificationDiv").show();
                return false;
            });


        });
    </script>
</body>
</html>
