@model PRIS.Models.Job

@{
    Layout = null;
    ViewBag.Title = "EmployerViewJobDetails";
    int id = ViewBag.Id;
    string name = ViewBag.Name;
}

@Html.ValidationSummary(true)

<head>
    <title>Jobseeker Sign Up</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/Scripts/JobseekerSignUp/JavaScript.js"></script>
    <link href="~/Scripts/JobseekerSignUp/StyleSheet1.css" rel="stylesheet" />

    <script src="~/Scripts/DateTime/jquery.datetimepicker.full.min.js"></script>
    <script src="~/Scripts/DateTime/jquery.js"></script>
    <link href="~/Scripts/DateTime/jquery.datetimepicker.css" rel="stylesheet" />

    <link rel="stylesheet" href="http://kendo.cdn.telerik.com/2017.1.118/styles/kendo.common.min.css" />
    <link rel="stylesheet" href="http://kendo.cdn.telerik.com/2017.1.118/styles/kendo.rtl.min.css" />
    <link rel="stylesheet" href="http://kendo.cdn.telerik.com/2017.1.118/styles/kendo.silver.min.css" />
    <link rel="stylesheet" href="http://kendo.cdn.telerik.com/2017.1.118/styles/kendo.mobile.all.min.css" />

    <script src="http://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="http://kendo.cdn.telerik.com/2017.1.118/js/kendo.all.min.js"></script>
    <style>
         th,td
        {
            font-size: 20px;
    	    width:50%;
        }
        th
        {
            width:30%;
    	    color:grey;
            font-weight: normal
        }
        td
        {
            width:70%;
    	    color:black;
        }
    </style>
</head>

<body>
    <div>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">PRIS</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("My Profile", "CompantDetails", "Real", new { id = id }, null)</li>
                        <li>@Html.ActionLink("Post New Jobs", "PostNewJobs", "Real", new { id = id }, null)</li>
                        <li class="active">@Html.ActionLink("Manage Jobs", "DisplayAllJobs", "Real", new { id = id }, null)</li>
                        <li>@Html.ActionLink("Search Jobseeker", "viewJobseeker", "Real", new { id = id }, null)</li>
                        <li>@Html.ActionLink("Applied Jobseeker", "DisplayAppliedJobseeker", "Real", new { id = id }, null)</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-user">@Model.Company.CompanyName</span><span class="caret"></span></a>                            <ul class="dropdown-menu">
                               
                                
                                <li><a href="#">Sign Out</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="content">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="head">
                <h1 style="padding-left:9%"><strong>Job Information</strong></h1>
            </div>

            <div class="container">
                <div class="row">
                    <div class="board">
                    </div>

                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="step-1">
                            <div class="col-md-12" style="padding:25px">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Job Title</th>
                                            <td>@Model.JobTitle</td>
                                        </tr>
                                    </thead>
                                    <tr>
                                        <th>Salary</th>
                                        <td>@Model.Salary</td>
                                    </tr>
                                    <tr>
                                        <th>Job Requirement</th>
                                        <td>@Model.JobRequirement</td>
                                    </tr>
                                    <tr>
                                        <th>Job Description</th>
                                        <td>@Model.JobDescription</td>
                                    </tr>
                                    <tr>
                                        <th>Job Location</th>
                                        <td>@Model.Location</td>
                                    </tr>
                                    <tr>
                                        <th>Short Description</th>
                                        <td>@Model.ShortDescription</td>
                                    </tr>
                                    <tr>
                                        <th>Posting Date</th>
                                        <td>@Model.PostingDate</td>
                                    </tr>
                                    <tr>
                                        <th>Test Diemnsion</th>
                                        @if (Model.Test == 1)
                                        {
                                            <td>Experience</td>
                                        }

                                        @if (Model.Test == 2)
                                        {
                                            <td>Independent</td>
                                        }
                                        @if (Model.Test == 3)
                                        {
                                            <td>Sociable</td>
                                        }
                                        @if (Model.Test == 4)
                                        {
                                            <td>High Awareness of Emotions</td>
                                        }
                                    </tr>
                                    <tr>
                                        <th></th>
                                        <td style="padding-top:6%"><input type="button" class="btn btn-primary" value="Back" style="font-size:18px" onclick="window.location.href='@Url.Action("DisplayAllJobs", "Real", new {id= ViewBag.Cid})';" />
                                        <input type="button" class="btn btn-primary" value="Edit" style="font-size:18px" onclick="window.location.href='@Url.Action("EditJobPost3", "Real", new { cid = ViewBag.Cid, id = ViewBag.Id })';" />
                                        </td>
                                    </tr>
                                </table>

                                    
                                        
</div>
                            </div>
                        </div>
                    </div>
                </div>

        }</div>
</body>


<script type="text/javascript">
    $("#datetimepicker").kendoDateTimePicker({
        animation: false
    });

    $(document).ready(function () {
    // create DateTimePicker from input HTML element
        $("#datetimepicker").kendoDateTimePicker({
             value: new Date()
         });
    });

    $(document).ready(function () {
        // create DateTimePicker from input HTML element
        $('#ExpiredDate').datepicker();
        //$("#news_date").datepicker({ dateFormat: 'dd/mm/yy' });
    });

   $(function () {
        // This will make every element with the class "date-picker" into a DatePicker element
        $('.date-picker').datepicker();
   })

   $('.datepicker').datepicker({
       showOn: "both",
       buttonImage: "../public/images/Calendar_16x16.png",
       buttonImageOnly: "true"
   });
</script>