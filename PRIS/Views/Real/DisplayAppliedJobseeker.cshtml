@model IEnumerable<PRIS.Models.SignUpViewModel>
@{
    Layout = null;
    ViewBag.Title = "DisplayAppliedJobseeker";
    int id = ViewBag.Id;
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProfilePage</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Script/StyleSheet1.css">
    <script src="~/Script/JavaScript.js"></script>
    <script src="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700"></script>
    <link href="~/Scripts/JobDisplayPanel/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Scripts/Button/StyleSheet1.css" rel="stylesheet" />
    <script src="~/Scripts/RotatingCard/JavaScript.js"></script>
    <link href="~/Scripts/RotatingCard/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Scripts/JobseekerSignUp/StyleSheet1.css" rel="stylesheet" />
</head>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">PRIS</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("My Profile", "CompantDetails", "Real", new { id = id }, null)</li>
                <li>@Html.ActionLink("Post New Jobs", "PostNewJobs", "Real", new { id = id }, null)</li>
                <li>@Html.ActionLink("Manage Jobs", "DisplayAllJobs", "Real", new { id = id }, null)</li>
                <li>@Html.ActionLink("View Jobseeker", "viewJobseeker", "Real", new { id = id }, null)</li>
                <li class="active">@Html.ActionLink("Applied Jobseeker", "DisplayAppliedJobseeker", "Real", new { id = id }, null)</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-user">@ViewBag.Name</span><span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Sign Out</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6" style="padding-bottom:25px">
                    <div class="card-container">
                        <h3 class="name">@Html.DisplayFor(modelItem => item.JobTitle)</h3>
                        <div class="card">
                            <div class="front">
                                <div class="cover">
                                    <img src="https://www.clipartsgram.com/image/129556292-kyz84k3.jpg" />
                                </div>
                                <div class="user">
                                    @if (item.Resume != null)
                                    {
                                        var base64String = Convert.ToBase64String(item.Resume);
                                        var imgsrc = string.Format("data:file/gif;base64,{0}", base64String);
                                        <img class="img-circle" src='@imgsrc' style="max-height:200px; max-width:200px" />
                                    }
                                    else
                                    {
                                        <img src="@Url.Content("~/Images/dummy-image.jpg")" alt="IMAGES" style="max-height:200px; max-width:200px" />
                                    }
                                </div>
                                <div class="content">
                                    <div class="main">
                                        <h3 class="name">@Html.DisplayFor(modelItem => item.Name)</h3>
                                        <p class="profession">@Html.DisplayFor(modelItem => item.Email)</p>
                                        <p class="text-center">@Html.DisplayFor(modelItem => item.PhoneNo)</p>
                                        <p class="text-center">@Html.DisplayFor(modelItem => item.Address)</p>
                                    </div>
                                    <div class="footer">
                                    </div>
                                </div>
                            </div> <!-- end front panel -->
                            <div class="back">
                                <div class="cover">
                                    <img src="https://www.clipartsgram.com/image/129556292-kyz84k3.jpg" />
                                </div>
                                <div class="content">
                                    <div class="main">

                                        <h4 class="text-center">Preferred Salary: RM @Html.DisplayFor(modelItem => item.PreferredSalary)</h4>
                                        <p class="text-center">Preferred Location: @Html.DisplayFor(modelItem => item.PreferredLocation)</p>
                                        <p class="text-center">Preferred Field: @Html.DisplayFor(modelItem => item.PreferredField)</p>

                                        <div class="stats-container">
                                            <div class="stats" style="width:50%">
                                                <h4></h4>
                                                <p>
                                                    @Html.ActionLink("View", "EmployerViewJobseekerDetailsFromApplied", "Real", new { id = item.JobseekerId, cid = ViewBag.Id }, null)
                                                </p>
                                            </div>

                                            <div class="stats" style="width:50%">
                                                <h4></h4>
                                                <p>
                                                    @Html.ActionLink("Test Result", "EmployerViewTestResult", "Real", new { id = item.JobseekerId, cid = ViewBag.Id }, new { target = "_blank" })
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- end back panel -->
                        </div> <!-- end card -->
                    </div> <!-- end card-container -->
                </div> <!-- end col sm 3 -->




                                        }
            </div>
        </div>
    </div>

